<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_text_color">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="details_text_appearance" parent="default_text_color">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="full_width_content_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="no_width_content_height">
        <item name="android:layout_width">@dimen/obey_constraints</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detail_text_style" parent="full_width_content_height">
        <item name="android:layout_marginTop">@dimen/small_top_margin</item>
    </style>

    <style name="giphy_viewcell_text_appearance" parent="default_text_color">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="imageview_style" parent="full_width_content_height">
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>
